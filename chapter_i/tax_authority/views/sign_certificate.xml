<odoo>
    <record id="action_sign_certificate" model="ir.actions.act_window">
        <field name="name">Sign Certificate</field>
        <field name="res_model">sign.certificate</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_sign_certificate_tree" model="ir.ui.view">
        <field name="name">Sign Certificate</field>
        <field name="model">sign.certificate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="expire_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>